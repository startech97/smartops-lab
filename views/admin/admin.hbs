<div class="row">
  <div class="col s6 offset-s3">
    <ul class="collapsible">
      {{#each data}}
        <li>
          <div class="collapsible-header"><i class="material-icons">filter_drama</i>{{department}}</div>
          <div class="collapsible-body">
            <ul class="collection">
              {{#each user}}
                <li class="collection-item"><div>{{surname}} {{name}} <a href="/admin/{{id}}" class="secondary-content"><i class="material-icons" data-value="{{id}}">send</i></a><a class="modal-trigger secondary-content" href="#modal-{{id}}"><i class="material-icons" data-value="{{id}}">insert_link</i></a></div></li>
              {{/each}}
              <li class="collection-item"><div class="center"><i class="material-icons  add-employee">add</i></div></li>
            </ul>
          </div>
        </li>
      {{/each}}
      <div class="center"><i class="material-icons  add-group-admin">group_add</i></div>
    </ul>
  </div>
        </li>
  </ul>
  </div>
</div>

{{#each data}} 
  {{#each user}}
    <div id="modal-{{id}}" class="modal">
      <div class="modal-content">
          <h4>{{name}} {{surname}}</h4>
          <p>Выберите тест</p>
          <div class="collection">
            {{#each @root.tests}}
              <a href="#!" class="collection-item link-user link{{../id}} modal-close" data-clipboard-text="192.168.0.105:3001/user/{{@root.owner}}/{{../id}}/{{code}}"  onclick="M.toast({html: 'Ссылка скопирована'})">{{name}}</a>
              <div class="w-{{code}}"></div>
            {{/each}}
          </div>
      </div> 
    </div>
  {{/each}} 
{{/each}}

<div class="fixed-action-btn">
  <a class="btn-floating btn-large purple tooltipped" data-position="left" data-tooltip="Добавить">
    <i class="large material-icons">create</i>
  </a>
  <ul>
    <li><a class="btn-floating green darken-1 tooltipped" data-position="left" data-tooltip="Добавить отдел"><i class="material-icons">group_add</i></a></li>
    <li><a class="btn-floating yellow darken-1 tooltipped" data-position="left" data-tooltip="Добавить сотрудника"><i class="material-icons">person_add</i></a></li>
  </ul>
</div>

